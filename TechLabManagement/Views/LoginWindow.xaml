<Window x:Class="TechLabManagement.Views.LoginWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Sign in - Tech Lab Management" Height="360" Width="520"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize" WindowStyle="SingleBorderWindow" Background="#F5F8FF">
    <Grid>
        <Grid VerticalAlignment="Center">
            <Border Width="460" Background="White" CornerRadius="10" Padding="20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="14" ShadowDepth="0" Opacity="0.25" />
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="4,0,4,10">
                        <Border Width="40" Height="40" Background="#1976D2" CornerRadius="20"
                            VerticalAlignment="Center">
                            <TextBlock Text="ðŸ”" FontSize="20" VerticalAlignment="Center"
                                HorizontalAlignment="Center" />
                        </Border>
                        <StackPanel Margin="12,0,0,0">
                            <TextBlock Text="Sign in" FontSize="20" FontWeight="Bold" />
                            <TextBlock Text="Tech Lab Management" Foreground="Gray" />
                        </StackPanel>
                    </StackPanel>

                    <!-- Username -->
                    <StackPanel Grid.Row="1" Margin="4,6,4,0">
                        <TextBlock Text="Username" Margin="2,0,0,4" />
                        <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                            Height="34" FontSize="14" />
                    </StackPanel>

                    <!-- Password -->
                    <StackPanel Grid.Row="2" Margin="4,10,4,0">
                        <TextBlock Text="Password" Margin="2,0,0,4" />
                        <Grid>
                            <PasswordBox x:Name="PasswordBox" Height="34" FontSize="14"
                                KeyDown="PasswordBox_KeyDown"
                                PasswordChanged="PasswordBox_PasswordChanged" />
                            <TextBox x:Name="PasswordRevealTextBox" Height="34" FontSize="14"
                                Visibility="Collapsed"
                                KeyDown="PasswordRevealTextBox_KeyDown" />
                        </Grid>
                        <CheckBox x:Name="ShowPasswordCheck" Content="Show password"
                            Margin="2,6,0,0"
                            Checked="ShowPassword_Checked" Unchecked="ShowPassword_Unchecked" />
                        <TextBlock Text="{Binding ErrorMessage}" Foreground="#D32F2F"
                            Margin="2,8,0,0" />
                    </StackPanel>

                    <!-- Actions -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right"
                        Margin="0,18,0,0">
                        <Button Content="Cancel" Width="90" Margin="0,0,8,0" IsCancel="True" />
                        <Button Content="Login" Width="110" IsDefault="True" Click="OnLoginClick"
                            Background="#1976D2" Foreground="White" BorderBrush="#1976D2"
                            FontWeight="Bold" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
