<Page x:Class="TechLabManagement.Views.AccessRequestWizardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Access Request">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Access Request &amp; Induction" FontSize="20" FontWeight="Bold" />

        <TabControl Grid.Row="1" SelectedIndex="{Binding Step}">
            <TabItem Header="1. Request">
                <StackPanel Margin="12">
                    <TextBlock Text="Select Lab" />
                    <ComboBox ItemsSource="{Binding LabChoices}"
                        SelectedValuePath="Lab"
                        SelectedValue="{Binding SelectedLab}"
                        DisplayMemberPath="Name">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="IsEnabled" Value="{Binding IsEnabled}" />
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                    <TextBlock Text="Reason" Margin="0,12,0,0" />
                    <TextBox Text="{Binding Reason}" Height="80" TextWrapping="Wrap"
                        AcceptsReturn="True" />
                </StackPanel>
            </TabItem>
            <TabItem Header="2. Induction" IsEnabled="{Binding CanNavigateToInduction}">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="12">
                        <TextBlock Text="Answer all questions correctly to pass the induction test:"
                            Margin="0,0,0,12" />
                        <ItemsControl ItemsSource="{Binding CurrentQuestions}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,8,0,16">
                                        <TextBlock Text="{Binding Question.Text}" FontWeight="Bold"
                                            Margin="0,0,0,8" />
                                        <ItemsControl ItemsSource="{Binding Options}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <RadioButton Content="{Binding Text}"
                                                        IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                        Command="{Binding SelectCommand}"
                                                        Margin="0,2,0,2" />
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="3. Review" IsEnabled="{Binding CanNavigateToReview}">
                <StackPanel Margin="12">
                    <TextBlock Text="Review your request before submit" />
                    <TextBlock Text="{Binding Summary}" />
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"
            Margin="0,12,0,0">
            <Button Content="Back" Margin="0,0,8,0" Command="{Binding BackCommand}" />
            <Button Content="Next" Margin="0,0,8,0" Command="{Binding NextCommand}" />
            <Button Content="Submit" Command="{Binding SubmitCommand}" />
        </StackPanel>
    </Grid>
</Page>
