<Page x:Class="TechLabManagement.Views.AccessRequestWizardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:validations="clr-namespace:TechLabManagement.Validations"
    mc:Ignorable="d"
    Title="Access Request">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Access Request &amp; Induction" FontSize="20" FontWeight="Bold" />

        <TabControl Grid.Row="1" SelectedIndex="{Binding Step}">
            <TabItem Header="1. Request">
                <StackPanel Margin="12">
                    <TextBlock Text="Select Lab" />
                    <ComboBox ItemsSource="{Binding Labs}" SelectedItem="{Binding SelectedLab}"
                        DisplayMemberPath="Name" />
                    <TextBlock Text="Reason" Margin="0,12,0,0" />
                    <TextBox Height="80" TextWrapping="Wrap" AcceptsReturn="True">
                        <TextBox.Text>
                            <Binding Path="Reason" UpdateSourceTrigger="PropertyChanged"
                                ValidatesOnDataErrors="True">
                                <Binding.ValidationRules>
                                    <validations:MinLengthValidationRule MinLength="10" />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                </StackPanel>
            </TabItem>
            <TabItem Header="2. Induction">
                <StackPanel Margin="12">
                    <ItemsControl ItemsSource="{Binding CurrentQuestions}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0,8,0,8">
                                    <TextBlock Text="{Binding Text}" FontWeight="Bold" />
                                    <ListBox ItemsSource="{Binding Options}" SelectedIndex="0" />
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </TabItem>
            <TabItem Header="3. Review">
                <StackPanel Margin="12">
                    <TextBlock Text="Review your request before submit" />
                    <TextBlock Text="{Binding Summary}" />
                </StackPanel>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right"
            Margin="0,12,0,0">
            <Button Content="Back" Margin="0,0,8,0" Command="{Binding BackCommand}" />
            <Button Content="Next" Margin="0,0,8,0" Command="{Binding NextCommand}" />
            <Button Content="Submit" Command="{Binding SubmitCommand}" />
        </StackPanel>
    </Grid>
</Page>
