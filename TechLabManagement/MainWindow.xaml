<Window x:Class="TechLabManagement.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:TechLabManagement"
    mc:Ignorable="d"
    Title="Tech Lab Management System" Height="700" Width="1200" MinWidth="900" MinHeight="550"
    WindowStartupLocation="CenterScreen">
    <DockPanel>
        <!-- Modern Menu Bar -->
        <Border DockPanel.Dock="Top" Background="#1976D2" Padding="0">
            <Menu Background="#1976D2" Foreground="White" FontSize="14" Padding="8,4">
                <MenuItem Header="🏠 _Dashboard" Click="DashboardMenu_Click" Foreground="White" Padding="12,8"/>
                <MenuItem Header="🔬 _Labs" Click="LabsMenu_Click" Foreground="White" Padding="12,8"/>
                <MenuItem Header="📝 _Access Request" Click="AccessRequestMenu_Click" Foreground="White" Padding="12,8"/>
                <MenuItem Header="📅 _Booking" Click="BookingMenu_Click" Foreground="White" Padding="12,8"/>
                <MenuItem Header="✅ _Approvals" Click="ApprovalsMenu_Click" Foreground="White" Padding="12,8"/>
                <MenuItem Header="ℹ _Help" Padding="12,8" Foreground="White">
                    <MenuItem Header="About" Click="AboutMenu_Click"/>
                    <MenuItem Header="User Guide" Click="HelpMenu_Click"/>
                </MenuItem>
            </Menu>
        </Border>
        
        <!-- Main Content Frame -->
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Background="#F5F5F5" />
    </DockPanel>
</Window>
